rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email == 'widihmadibnu@gmail.com';
    }
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Assessments - Admin write, authenticated read for active assessments
    match /assessments/{assessmentId} {
      allow read: if isAuthenticated() || (resource != null && resource.data.isActive == true);
      allow write: if isAdmin();
    }
    
    // Criteria Templates - Admin write, authenticated read for active templates
    match /criteria_templates/{templateId} {
      allow read: if isAuthenticated() || (resource != null && resource.data.isActive == true);
      allow write: if isAdmin();
    }
    
    // Employees - Admin write, authenticated read
    match /employees/{employeeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Locations - Admin write, authenticated read
    match /locations/{locationId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Divisions - Admin write, authenticated read
    match /divisions/{divisionId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Assessment Results - Create for authenticated users, admin for read/update/delete
    match /assessment_results/{resultId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAdmin();
    }
    
    // Audit Logs - Admin read only, authenticated create
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }
  }
} 